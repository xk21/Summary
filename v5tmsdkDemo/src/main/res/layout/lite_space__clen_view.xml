<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lite_space_clen_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:layout_marginTop="0dp"
    >
    <ImageView
        android:id="@+id/clen_lift_image"
        android:layout_width="36dp" android:layout_height="36dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon"
        app:layout_constraintLeft_toLeftOf="@+id/lite_space_clen_constraint"
        app:layout_constraintTop_toTopOf="@+id/clen_middle_image"
        app:layout_constraintBottom_toBottomOf="@+id/clen_middle_image" android:layout_marginBottom="0dp"/>
    <ImageView
        android:id="@+id/clen_middle_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/clen_lift_image" android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.5"/>
    <TextView
        android:id="@+id/clen_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="woshi"
        android:textColor="#323232"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/clen_abstract_text"
        app:layout_constraintLeft_toRightOf="@+id/clen_middle_image"
        app:layout_constraintTop_toTopOf="@+id/clen_middle_image" android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" app:layout_constraintVertical_bias="0.0"/>
    <TextView android:id="@+id/clen_abstract_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginStart="16dp"
              android:text="nishi"
              android:textSize="12sp"
              app:layout_constraintLeft_toRightOf="@+id/clen_middle_image"
              app:layout_constraintBottom_toBottomOf="@+id/clen_middle_image"
              android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/clen_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/clen_right_image"
        app:layout_constraintTop_toTopOf="@+id/clen_middle_image"
        tools:text="@string/activity_deepclean"
        app:layout_constraintBottom_toBottomOf="@+id/clen_middle_image" android:layout_marginBottom="8dp"/>
    <ImageView
        android:id="@+id/clen_right_image"
        android:layout_width="24dp"
        android:layout_height="24dp" android:background="@drawable/ic_launcher"
        app:layout_constraintRight_toRightOf="@+id/lite_space_clen_constraint"
        app:layout_constraintTop_toTopOf="@+id/clen_middle_image" android:layout_marginRight="16dp"
        android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="@+id/clen_middle_image"
        android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout android:layout_width="368dp"
                  android:layout_height="1px"
                  android:background="#1f000000"
                  android:id="@+id/linearLayout"
                  android:layout_marginTop="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/clen_middle_image"
                  >

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
