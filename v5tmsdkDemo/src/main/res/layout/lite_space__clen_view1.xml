<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lite_space_clen_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:layout_marginTop="0dp"
    >
    <ImageView
        android:id="@+id/clen_lift_image"
        android:layout_width="36dp" android:layout_height="36dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon"
        android:layout_marginBottom="0dp"/>
    <ImageView
        android:id="@+id/clen_middle_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/icon"
       />
    <TextView
        android:id="@+id/clen_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="woshi"
        android:textColor="#323232"
        android:textSize="16sp"
        />
    <TextView android:id="@+id/clen_abstract_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginStart="16dp"
              android:text="nishi"
              android:textSize="12sp"
             />

    <TextView
        android:id="@+id/clen_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#808080"
        android:textSize="12sp"
       android:layout_marginBottom="8dp"/>
    <ImageView
        android:id="@+id/clen_right_image"
        android:layout_width="24dp"
        android:layout_height="24dp" android:background="@drawable/ic_launcher"
       />

</LinearLayout>
