    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button 
	    android:id="@+id/btn1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="智能短信检测"
        />
    <Button 
	    android:id="@+id/btn2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="支付短信检测"
        />
    <TextView 
	    android:id="@+id/content_shower"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    />    
</LinearLayout>
