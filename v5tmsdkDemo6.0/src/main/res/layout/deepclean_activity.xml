<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ResultStateText"
        android:layout_width="fill_parent"
        android:layout_height="150dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0" />

 
 <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
		   
	  
    <Button
        android:id="@+id/sdcard_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始扫描" />
    <Button
        android:id="@+id/stop_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止全盘" />
    <Button
        android:id="@+id/quick_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速扫描" />
        

        <Button
        android:id="@+id/stop_quick_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止快速" />

 </LinearLayout>
  <LinearLayout     android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
 
     <Button
        android:id="@+id/clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始清理" />
    <Button
        android:id="@+id/stop_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止清理" />
      
  </LinearLayout>
     <Button
        android:id="@+id/update_rubbish_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="升级垃圾库" />

    <EditText
        android:id="@+id/pkg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/scan_pkg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按包名扫描" />
 
       
    <include layout="@layout/deepclean_custom_sdcard_roots_operating"/>

</LinearLayout>