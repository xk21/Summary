<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.custom_view">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.custom_view"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".CustomView1Activity">
        </activity>
        <activity android:name=".TextSummaryWithImgCheckBoxActivity">
        </activity>
        <activity android:name=".ProgressBarActivity">
        </activity>
        <activity android:name=".SwitchToggleViewActivity">
        </activity>
        <activity android:name=".CrossLayoutActivity">
        </activity>
        <activity android:name=".SlideUnlockActivity">
        </activity>
        <activity
            android:name=".SlidingMenuActivity"
            android:label="@string/title_activity_sliding_menu"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MagicViewPager">
        </activity>
    </application>

</manifest>
